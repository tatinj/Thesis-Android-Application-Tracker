<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/friend_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#674FA3"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:text="Family Member Location: Loading..."
        android:gravity="center"
        android:elevation="6dp"
        android:layout_alignParentTop="true" />

    <!-- MAP -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/friend_info_tv"
        android:layout_above="@id/bottom_nav" />

    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        android:elevation="10dp">

        <!-- FRIEND -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/friend_section"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/users_group_members_team_icon_226574" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- LOCATION -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/location_section_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/direction_gps_location_map_maps_navigation_pin_icon_123206" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- SAFETY -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/safety_section"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/provensafety_5137" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_section"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user_person_profile_avatar_icon_190943" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
