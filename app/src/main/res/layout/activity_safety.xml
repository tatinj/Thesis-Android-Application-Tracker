<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp">

    <!-- Display current address -->
    <TextView
        android:id="@+id/tv_current_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#674FA3"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Your Current Address"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Horizontal container for Set Home button and Curfew Status -->
    <LinearLayout
        android:id="@+id/home_curfew_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_current_address"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Curfew Status Indicator -->
        <TextView
            android:id="@+id/tv_curfew_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F1EBFB"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="No active curfew"
            android:textColor="#1E1E1E
"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Spacer -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <!-- Set Home button -->
        <Button
            android:id="@+id/btn_set_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_background"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:text="Set Home"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>


    <!-- RecyclerView for members -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_members"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/home_curfew_container"
        android:layout_marginTop="16dp"
        android:background="#F1EBFB"
        android:elevation="4dp"
        android:padding="10dp"
        app:cardCornerRadius="12dp" />


    <!-- Member Info & Curfew -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_nav"
        android:layout_below="@id/recycler_view_members"
        android:layout_marginTop="16dp"
        android:background="#F1EBFB"
        android:elevation="6dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EBFB"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Member Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_member_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional info here"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Set Curfew Button -->
                <Button
                    android:id="@+id/btn_set_curfew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/rounded_button"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="Set New Curfew"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Location Logs Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F1EBFB"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Location History"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_location_logs"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#FFFFFF"
                        android:padding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/friend_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/users_group_members_team_icon_226574" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Friends"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- LOCATION -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/location_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/direction_gps_location_map_maps_navigation_pin_icon_123206" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- SAFETY -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/safety_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/provensafety_5137" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Safety"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/user_person_profile_avatar_icon_190943" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
