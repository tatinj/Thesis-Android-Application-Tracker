<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <!-- TextView to display one-time unique code -->
    <!-- TextView to display the unique code -->
    <TextView
        android:id="@+id/tv_unique_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="Your Code:"
        android:textColor="@color/green_600"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- EditText to input friend's code -->
    <EditText
        android:id="@+id/et_friend_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_unique_code"
        android:layout_margin="16dp"
        android:background="@color/green_800"
        android:gravity="center"
        android:hint="Enter friend's code"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <!-- Button to add a friend by code -->

    <!-- RecyclerView to show list of friends with 'Add Friend' button beside each member -->
    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_friend_code"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:padding="12dp"
        android:text="Add Friend"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_friends"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/btn_add_friend"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:padding="8dp" />
    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green_700"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Friend Section Icon -->
        <ImageView
            android:id="@+id/friend_section"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:contentDescription="Friend"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/users_group_members_team_icon_226574" />

        <!-- Location Section Icon -->
        <ImageView
            android:id="@+id/location_section"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:contentDescription="Location"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/direction_gps_location_map_maps_navigation_pin_icon_123206" />

        <!-- Safety Section Icon -->
        <ImageView
            android:id="@+id/safety_section"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:contentDescription="Safety"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/provensafety_5137" />

        <!-- Profile Section Icon -->
        <ImageView
            android:id="@+id/profile_section"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:contentDescription="Profile"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/user_person_profile_avatar_icon_190943" />

    </LinearLayout>

</RelativeLayout>
