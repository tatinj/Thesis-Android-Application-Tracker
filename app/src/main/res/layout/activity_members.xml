<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Unique Code Text -->
    <TextView
        android:id="@+id/tv_unique_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="Your Invitation Code:"
        android:textColor="#674FA3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Input Code -->
    <EditText
        android:id="@+id/et_friend_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_unique_code"
        android:layout_margin="16dp"
        android:background="#806DBC"
        android:gravity="center"
        android:hint="Enter family member's code"
        android:padding="16dp"
        android:textColor="#FDFDFD"
        android:textColorHint="#FDFDFD"
        android:textSize="16sp" />

    <!-- Add Family Button -->
    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_friend_code"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:padding="12dp"
        android:text="Add Family"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- Friends List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_friends"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/btn_add_friend"
        android:layout_margin="16dp"
        android:background="#F1EBFB"
        android:padding="8dp" />

    <!-- Bottom Navigation (Updated With Text Under Icons) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- FRIEND -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/friend_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/users_group_members_team_icon_226574" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Family"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- LOCATION -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/location_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/direction_gps_location_map_maps_navigation_pin_icon_123206" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- SAFETY -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/safety_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/provensafety_5137" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Safety"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_section"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/user_person_profile_avatar_icon_190943" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
