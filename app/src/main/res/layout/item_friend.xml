<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@color/light_green_600"
    android:layout_marginVertical="4dp"
    android:elevation="2dp">

    <!-- Left side: Name, Number, Code -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_friend_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 09123456789"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/tv_friend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code: ABC123"
            android:textSize="14sp"
            android:textColor="#555555" />
    </LinearLayout>

    <!-- Right side: Button -->
    <Button
        android:id="@+id/btn_find_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp"/>
</LinearLayout>
