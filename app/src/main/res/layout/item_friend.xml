<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Left side: Name, Number, Code -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_friend_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery: 100%"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_friend_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 09123456789"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_friend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code: ABC123"
            android:textColor="#555555"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Right side: Delete and Find Buttons -->
    <ImageButton
        android:id="@+id/btn_delete_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Delete Friend"
        app:srcCompat="@android:drawable/ic_delete" />

    <Button
        android:id="@+id/btn_find_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:textColor="@android:color/white" />

</LinearLayout>